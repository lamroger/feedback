<div class="mx-auto md:w-2/3 w-full flex flex-col">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @survey %>

    <%= link_to 'Edit', edit_survey_path(@survey), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete', survey_path(@survey), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to Surveys', surveys_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

    <hr class="mt-6">

    <h2 class="pt-8 font-bold text-2xl">Responses</h2>
    <% @survey.responses.each do |response| %>
      <p class="my-5">
        <strong class="block font-medium mb-1">Message:</strong>
        <%= response.message %>
      </p>
    <% end %>
  </div>
</div>
