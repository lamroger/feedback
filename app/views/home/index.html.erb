<div class="container mx-auto">
  <div class="py-24 px-4 mx-auto max-w-screen-xl text-center lg:py-32 lg:px-12">
    <h1 class="py-4 text-4xl font-bold text-center">Simply receive feedback</h1>
    <h2 class="py-4 text-xl text-center">Submit anonymized feedback with AI. No login to submit.</h1>
    <div class="flex flex-col mb-4 lg:mb-16 space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4">
      <% if user_signed_in? %>
        <%= button_to "Create a survey", new_survey_path, method: :get, class: "text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800" %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800" %>
      <% end %>
    </div>
  <div>
</div>
