<div class="mx-auto pt-8 px-4 md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <h1 class="font-bold text-4xl">Send feedback</h1>

  <h2 class="text-2xl"><%= @survey.description %></h2>
  <%= render "form", response: @response %>
</div>
